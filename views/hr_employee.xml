<odoo>
    <data>
        <record id="inherited_model_employee_form" model="ir.ui.view">
            <field name="name">inherited.model.form.employee.inherit</field>
            <field name="model">hr.employee</field> <!--MODULO NATIVO-->
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <xpath expr="//div[@id='o_work_employee_main']" position="inside">
                    <group string="Aprobador Gastos">
                        <field name="superior" widget="many2many_tags"/>
                        <field name="subordinados" widget="many2many_tags"/>
                        <field name="create_date"/>
                    </group>

                </xpath>
            </field>
        </record>

        <record id="inherited_gastos_employee_kanban" model="ir.ui.view">
            <field name="name">inherited.model.kanban.employee.gastos</field>
            <field name="model">hr.employee</field> <!--MODULO NATIVO-->
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <kanban position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="edit">false</attribute>
                </kanban>
            </field>
        </record>

        <record id="inherited_gastos_employee_tree" model="ir.ui.view">
            <field name="name">inherited.model.tree.employee.gastos</field>
            <field name="model">hr.employee</field> <!--MODULO NATIVO-->
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <tree position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="edit">false</attribute>
                    <button name="action_archive" attrs="{'invisible': True}"/>
                    <field name="disable_archive" invisible="1"/>
                    <button name="action_archive" attrs="{'invisible': [('disable_archive', '=', True)]}"/>
                </tree>
            </field>
        </record>

        <record id="inherited_gastos_employee_form" model="ir.ui.view">
            <field name="name">inherited.model.form.employee.gastos</field>
            <field name="model">hr.employee</field> <!--MODULO NATIVO-->
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <form position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="edit">false</attribute>

                </form>
            </field>
        </record>


    </data>
</odoo>