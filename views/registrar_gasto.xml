<odoo>
    <data>
        <record id="view_tree_registro_gasto" model="ir.ui.view">
        <field name="name">view.tree.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <field name="num_solicitud"/>
                    <field name="empleado_name"/>
                    <field name="centro_costo"/>
                    <field name="fecha_entrega"/>
                    <field name="fecha_contable"/>
                    <field name="moneda"/>
                    <field name="currency_id"/>
                    <field name="monto_entrega" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="saldo" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="observacionenvio"/>
                    <field name="numeroplaca"/>
                    <field name="glosa_entrega"/>
                    <field name="state"/>
                    <field name="tipoliquidacion_id"/>
<!--                    <field name="id_current" invisible="1"/>-->
                </tree>
            </field>
        </record>

                <!--VISTA ATORIZACION TREE-->
      <record id="view_form_registro_gasto" model="ir.ui.view">
        <field name="name">view.form.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <form string="Liquidacion">
                    <header>
<!--                        <button string="Enviar a aprobacion" name="action_confirm" states="a_enviar" type="object" class="oe_highlight"/>-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,jefatura,contable"/>
                    </header>
                        <group string="Detalle Liquidaciones">
                            <group>
                                <field name="num_solicitud" readonly="1"/>
                                <field name="empleado_name" readonly="1"/>
                                <field name="fecha_entrega" readonly="1"/>
                                <field name="centro_costo" string="Centro de Costo" readonly="1"/>
                            </group>
                            <group>
                                <field name="observacionenvio" readonly="1"/>
                                <field name="numeroplaca" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="tipoliquidacion_id" readonly="1"/>
                            </group>
                        </group>
                         <notebook>
                             <page string="Detalle Liquidaciones">
                                 <field name="detalleliquidaciones_id" class="custom-control custom-checkbox" widget="section_and_note_one2many" mode="tree">
                                    <tree editable="bottom">
                                        <field name="tipo"/>

                                        <field name="ruc"/>
                                        <field name="subtipo"/>
                                        <field name="serie"/>
                                        <field name="fechaemision"/>

                                        <field name="base_afecta" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="base_inafecta" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="montoigv" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="moneda"/>

                                        <field name="totaldocumento"/>
                                        <field name="numero"/>
                                        <field name="ruc"/>
                                        <field name="cuenta_contable"/>

                                        <button string="Aprobar" name="action_approve" type="object" icon="fa-thumbs-up" />
                                        <button string="Rechazar" name="action_refuse" type="object" icon="fa-times" />
<!--                                        attrs="{'invisible':['|',('current_user_uid','!=',1),('state','!=','aprobado1')]}"-->

                                    </tree>
                                    <form>
                                        <group>
                                            <field name="tipo"/>
                                            <field name="subtipo"/>
                                            <field name="serie"/>
                                            <field name="numero"/>
                                            <field name="ruc"/>
                                        </group>
                                    </form>
                            </field>
                             </page>
                         </notebook>

                </form>

            </field>
        </record>

<!--      SEARCH VIEW-->
      <record id="view_gastos_tqc_filter" model="ir.ui.view">
            <field name="name">filter.gastos.tqc</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <search string="Search Gastos Tqc">
                    <filter name="draft" string="Sin visto jefe" domain="[('state', '=', 'draft')]"/>
                    <filter name="jefatura" string="Jefatura" domain="[('state', '=', 'jefatura')]"/>
                    <filter name="contable" string="Contable" domain="[('state', '=', 'contable')]"/>
                    <filter name="tipoliquidacion_id" string="A rendir" domain="[('tipoliquidacion_id', '=', 1)]"/>
                    <filter name="tipoliquidacion_id" string="Tarjeta credito" domain="[('tipoliquidacion_id', '=', 2)]"/>
                </search>
            </field>
        </record>

      <!--Actiones-->
        <record id="action_view_tree_liquidaciones" model="ir.actions.act_window">
                <field name="name">Flujo de aprobaciones</field>
                <field name="res_model">tqc.liquidaciones</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="gastos_tqc.view_gastos_tqc_filter"/>
                <field name="context">{'search_default_draft':1}</field>
                <field name="target">main</field>
                <field name="help" type="html">
                    <p class="o_view_nocontent_empty_folder">
                        No RFQs to display
                    </p>
                </field>
        </record>

          <record id="action_view_filter_gastos" model="ir.actions.act_window">
            <field name="name">Liquidaciones</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="gastos_tqc.view_tree_tqc_liquidaciones"/>
            <field name="search_view_id" ref="gastos_tqc.view_gastos_tqc_filter"/>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No RFQs to display
                </p>
            </field>
        </record>

          <!-- Action Liquidaciones -->
          <record model="ir.actions.server" id="action_registro_gastos">
            <field name="name">Action registrar gastos</field>
            <field name="model_id" ref="model_tqc_liquidaciones"/>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
            <field name="code">
                action = model._action_registro_gasto()
            </field>
        </record>

        <!-- Top menu item -->
    <!--    <menuitem id="menu_main_liquidaciones" name="Liquidaciones" action="gastos_tqc.action_view_tree_liquidaciones"/>-->
        <menuitem id="menu_registro_gasto" parent="gastos_tqc.menu_main_liquidaciones" sequence="1" name="Registro gasto" action="gastos_tqc.action_registro_gastos"/>
    </data>
</odoo>