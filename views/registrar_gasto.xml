        <menuitem id="menu_main_liquidaciones" name="Web de gastos"
                  action="gastos_tqc.action_view_registro_liquidaciones"/>
        <menuitem id="menu_registro_gasto" parent="gastos_tqc.menu_main_liquidaciones" sequence="1"
                  name="Registro gastos" action="gastos_tqc.action_view_registro_liquidaciones"/>
        <menuitem id="menu_registro_gasto_admin" parent="gastos_tqc.menu_main_liquidaciones" sequence="2"
                  name="Todos Registros" action="gastos_tqc.action_view_todos_registro_liquidaciones"
