        <!--      SEARCH VIEW-->
        <record id="search_register_filter" model="ir.ui.view">
            <field name="name">filter.registro.gastos.tqc</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <search string="Search Tqc">
                    <field name="tipo_documento" invisible="1"/>
                    <filter name="filtro_rendir" string="A rendir" domain="[('tipo_documento', '=', 'a_rendir')]"/>
                    <filter name="filtro_tarjeta" string="Tarjeta credito"
                            domain="[('tipo_documento', '=', 'tarjeta_credito')]"/>
                </search>
            </field>
        </record>

        <record id="action_view_registro_liquidaciones" model="ir.actions.act_window">
            <field name="name">Registro de gasto</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_registro_gasto')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_registro_gasto')})]"/>
            <field name="search_view_id" ref="gastos_tqc.search_register_filter"/>
            <field name="context">{'search_default_filtro_rendir':1}</field>
            <field name="domain">[('empleado_name.user_id','=',uid)]</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p>
            </field>
        </record>

        <record id="action_view_todos_registro_liquidaciones" model="ir.actions.act_window">
            <field name="name">Registro de gasto</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_registro_gasto')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_registro_gasto')})]"/>
            <field name="search_view_id" ref="gastos_tqc.search_register_filter"/>
            <field name="context">{'search_default_filtro_rendir':1}</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p>
            </field>
        </record>

