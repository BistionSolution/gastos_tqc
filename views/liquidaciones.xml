<odoo>
    <data>
        <!--VISTA  TREE-->
        <record id="view_tree_tqc_liquidaciones" model="ir.ui.view">
            <field name="name">view.tree.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <tree js_class="gastos_tqc_tree_selections" class="gastos_tqc">
                    <field name="habilitado_state"/>

                    <field name="num_solicitud"/>
                    <field name="empleado_name"/>
                    <field name="centro_costo"/>
                    <field name="fecha_entrega"/>
                    <field name="fecha_contable"/>

                    <field name="moneda"/>
                    <field name="currency_id" string="Moneda"/>
                    <field name="monto_entrega" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="saldo" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <!--                    <field name="observacionenvio"/>-->
                    <!--                    <field name="numeroplaca"/>-->
                    <!--                    <field name="glosa_entrega"/>-->
                    <field name="state"/>
                    <field name="tipoliquidacion_id"/>

                    <!--                    <field name="id_current" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <!--VISTA ATORIZACION TREE-->
        <record id="view_form_tqc_liquidaciones" model="ir.ui.view">
            <field name="name">view.form.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <form string="Liquidacion">
                    <header>
                        <button string="Enviar a contabilidad" name="button_jefatura" states="jefatura" type="object"
                                class="oe_highlight"/>
                        <button string="Aprobar" name="button_contable" states="contable" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="jefatura,contable,pendiente"/>
                    </header>
                    <group string="Detalle Liquidaciones">
                        <group>
                            <field name="num_solicitud" readonly="1"/>
                            <field name="empleado_name" readonly="1"/>
                            <field name="fecha_entrega" readonly="1"/>
                            <field name="habilitado_state" readonly="1" invisible="1"/>
                            <field name="centro_costo" string="Centro de Costo" readonly="1"/>
                        </group>
                        <group>
                            <field name="observacionenvio" readonly="1"/>
                            <field name="numeroplaca" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                            <field name="tipoliquidacion_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalle Liquidaciones">
                            <field name="detalleliquidaciones_id" class="custom-control custom-checkbox"
                                   widget="select_onemany" mode="tree">
                                <!--                                section_and_note_one2many-->
                                <tree editable="bottom" decoration-success="revisado_state == 'aprobado'"
                                      decoration-warning="revisado_state == 'corregido'"
                                      decoration-danger="revisado_state== 'rechazado'">
                                    <field name="tipo"/>
                                    <field name="revisado_state"/>
                                    <field name="ruc"/>
                                    <field name="subtipo"/>
                                    <field name="serie"/>
                                    <field name="fechaemision"/>

                                    <field name="base_afecta" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="base_inafecta" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="montoigv" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="moneda"/>

                                    <field name="totaldocumento"/>
                                    <field name="numero"/>
                                    <field name="cuenta_contable"/>
                                    <field name="observacionrepresentacion" string="Obs. Presentacion"/>

                                    <field name="observacionjefatura" string="Obs. jefatura"/>

                                    <!--                                    <button string="Aprobar" name="action_approve" type="object" icon="fa-thumbs-up"/>-->
                                    <!--                                    <button string="Rechazar" name="action_refuse" type="object" icon="fa-times"/>-->
                                    <!--                                        attrs="{'invisible':['|',('current_user_uid','!=',1),('state','!=','aprobado1')]}"-->

                                </tree>
                                <form>
                                    <group>
                                        <field name="tipo"/>
                                        <field name="subtipo"/>
                                        <field name="serie"/>
                                        <field name="numero"/>
                                        <field name="ruc"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                </form>

            </field>
        </record>

        <!--      SEARCH VIEW-->
        <record id="search_view_gastos_tqc_filter" model="ir.ui.view">
            <field name="name">filter.gastos.tqc</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <search string="Search Gastos Tqc">
                    <field name="state" invisible="1"/>
                    <filter name="jefatura" string="Sin visto jefe" domain="[('state', '=', 'jefatura')]"/>
                    <separator/>
                    <filter name="contable" string="Contable" domain="[('state', '=', 'contable')]"/>
                    <separator/>
                    <filter name="pendiente" string="Pendiente" domain="[('state', '=', 'pendiente')]"/>
                </search>
            </field>
        </record>


        <!--  Actiones-->
        <record id="action_view_tree_liquidaciones" model="ir.actions.act_window">
            <field name="name">Flujo de aprobaciones</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="gastos_tqc.search_view_gastos_tqc_filter"/>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_tqc_liquidaciones')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_tqc_liquidaciones')})]"/>
            <field name="context">{'search_default_jefatura':1}</field>
            <field name="domain">[('habilitado_state', 'in', ['proceso','corregir'])]</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No RFQs to display
                </p>
            </field>
        </record>

        <record id="action_view_contable_liquidaciones" model="ir.actions.act_window">
            <field name="name">Flujo de aprobaciones</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="gastos_tqc.search_view_gastos_tqc_filter"/>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_tqc_liquidaciones')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_tqc_liquidaciones')})]"/>
            <!--            <field name="context">{'search_default_contable':1}</field>-->
            <field name="domain">[('habilitado_state', 'in', ['proceso','corregir'])]</field>

            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No RFQs to display
                </p>
            </field>
        </record>

