<odoo>
    <data>
        <!--VISTA  TREE-->
        <record id="view_tree_tqc_liquidaciones" model="ir.ui.view">
            <field name="name">view.tree.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <tree js_class="gastos_tqc_tree_selections" class="gastos_tqc">
                    <field name="habilitado_state" invisible="1"/>
                    <field name="mode_view" force_save="1" invisible="1"/>

                    <field name="num_solicitud"/>
                    <field name="empleado_name"/>
                    <field name="centro_costo"/>
                    <field name="fecha_entrega" string="Fecha solicitud"/>
                    <field name="fecha_contable" invisible="1"/>
                    <field name="moneda"/>
                    <field name="currency_id" string="Moneda" invisible="1"/>
                    <field name="monto_entrega" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="saldo" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <!--                    <field name="observacionenvio"/>-->
                    <!--                    <field name="numeroplaca"/>-->
                    <!--                    <field name="glosa_entrega"/>-->
                    <field name="fecha_generacion"/>

                    <field name="state"/>
                    <field name="tipo_documento"/>
                    <!--                    <field name="id_current" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <!--VISTA ATORIZACION FORM-->
        <record id="view_form_tqc_liquidaciones" model="ir.ui.view">
            <field name="name">view.form.tqc.liquidaciones</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <form string="Liquidacion" create="0">
                    <header>
                        <button string="Enviar a contabilidad" name="button_jefatura" states="jefatura" type="object"
                                class="oe_highlight"
                                groups="gastos_tqc.res_groups_aprobador_gastos,gastos_tqc.res_groups_administrator"/>
                        <button string="Aprobar" name="button_contable" states="contable" type="object"
                                class="oe_highlight"
                                groups="gastos_tqc.res_groups_contador_gastos,gastos_tqc.res_groups_administrator"/>
                        <button string="Enviar a exactus" name="send_exactus" states="pendiente" type="object"
                                class="oe_highlight"
                                groups="gastos_tqc.res_groups_contador_gastos,gastos_tqc.res_groups_administrator"/>
                        <field name="state" widget="statusbar" statusbar_visible="jefatura,contable,pendiente"/>
                    </header>
                    <group>
                        <field name="mode_view" force_save="1" invisible="1"/>
                        <field name="empleado_name" invisible="1"/>
                        <field name="name" readonly="1" invisible="1"/>
                        <table style="width: 100%;">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="o_row o_hr_holidays_dates">
                                            <span class="oe_inline font-boldodo">
                                                Empleado :
                                            </span>
                                            <field name="empleado_name" class="oe_inline" readonly="1"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="o_row o_hr_holidays_dates">
                                            <span class="oe_inline font-boldodo">
                                                Centro de costo :
                                            </span>
                                            <field name="centro_costo" class="oe_inline" readonly="1"/>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="o_row o_row_readonly o_hr_holidays_dates">

                            <span class="oe_inline font-boldodo">
                                Glosa entrega :
                            </span>
                            <field name="glosa_entrega" class="oe_inline" readonly="1"/>
                        </div>
                        <table style="width: 400px;">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="o_row o_hr_holidays_dates">
                                            <span class="oe_inline font-boldodo">
                                                N° Solicitud :
                                            </span>
                                            <field name="num_solicitud" class="oe_inline" readonly="1"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="o_row o_hr_holidays_dates">

                                            <label for="fecha_entrega" class="oe_inline font-boldodo">
                                                Fecha :
                                            </label>
                                            <field name="fecha_entrega" class="oe_inline" readonly="1"/>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <div class="o_row o_row_readonly o_hr_holidays_dates">
                            <span class="oe_inline font-boldodo">
                                Monto entrega :
                            </span>
                            <field name="monto_entrega" class="oe_inline" readonly="1"/>
                            <span class="oe_inline font-boldodo">
                                Saldo :
                            </span>
                            <field name="saldo" class="oe_inline" readonly="1"/>
                            <span class="oe_inline font-boldodo">
                                Moneda :
                            </span>
                            <field name="currency_id" class="oe_inline" readonly="1" string="Moneda"/>
                        </div>
                        <div class="o_row o_row_readonly o_hr_holidays_dates">

                            <span class="oe_inline font-boldodo">
                                Numero placa :
                            </span>
                            <field name="numeroplaca" class="oe_inline" readonly="1" string="Moneda"
                                   style="margin-right: 10px;"/>
                            <span class="oe_inline font-boldodo">
                                Total neto :
                            </span>
                            <field name="current_total" class="oe_inline" readonly="1" force_save="1"
                                   string="current_total"/>
                        </div>
                    </group>
                    <notebook>
                        <page string="Detalle Liquidaciones">
                            <field name="uid_create" invisible="1"/>
                            <field name="detalleliquidaciones_id"
                                   class="o_field_one2many custom-control custom-checkbox"
                                   widget="select_onemany"
                                   options="{'create':false ,'create_edit': false}"
                                   attrs="{'readonly':['|','&amp;',('uid_create', '=', 2),('state', '!=', 'contable'),'&amp;',('uid_create', '=', 3),('state', 'in', ['jefatura','contable'])]}">
                                <!--                                section_and_note_one2many-->
                                <tree editable="bottom" decoration-success="revisado_state == 'aprobado'"
                                      decoration-warning="revisado_state == 'corregido'"
                                      decoration-danger="revisado_state in ['rechazado_jefatura','rechazado_contable']">
                                    <field name="tipodocumento" string="Tipo doc."
                                           options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="serie"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="numero"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="fechaemision" string="Fecha emisión"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="tipocambio" string="Tipo cambio" readonly="1" force_save="1"/>
                                    <field name="attachment"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>

                                    <field name="ruc" string="Ruc proveedor" class="consult_ruc"
                                           decoration-danger="proveedor_razonsocial == False"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="proveedor_razonsocial" string="Proveedor Razon social" readonly="1"
                                           force_save="1"/>
                                    <!--                                    <field name="state"/>-->
                                    <!--                                    <field name="subtipo"/>-->
                                    <field name="base_afecta" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="base_inafecta" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="impuesto"
                                           options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="montoigv" widget="monetary" string="Monto IGV"
                                           options="{'currency_field': 'currency_id'}" readonly="1" force_save="1"/>
                                    <field name="totaldocumento" widget="monetary" string="Total Documento"
                                           options="{'currency_field': 'currency_id'}" readonly="1" force_save="1"
                                           sum="Total Documentos"/>
                                    <field name="cuenta_contable"
                                           options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"
                                    />
                                    <!--                                    <field name="nocliente"/>-->
                                    <field name="cliente" class="consult_client"
                                           decoration-danger="cliente_razonsocial == False"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="cliente_razonsocial" readonly="1" force_save="1"
                                           string="Cliente razon social"/>
                                    <field name="observacionrepresentacion" string="Obs. Presentacion"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="observacionjefatura" string="Obs. Jefatura"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="observacioncontabilidad" string="Obs. Contabilidad"
                                           attrs="{'readonly':[('revisado_state', 'in', ['rechazado_jefatura','rechazado_contable'])]}"/>
                                    <field name="state" invisible="1"/>
                                    <field name="revisado_state" readonly="1" widget="badge"
                                           decoration-success="revisado_state == 'aprobado'"
                                           decoration-warning="revisado_state == 'corregido'"
                                           decoration-danger="revisado_state in ['rechazado_jefatura','rechazado_contable']"/>

                                    <!--                                    <button string="Aprobar" name="action_approve" type="object" icon="fa-thumbs-up"/>-->
                                    <!--                                    <button string="Rechazar" name="action_refuse" type="object" icon="fa-times"/>-->
                                    <!--                                        attrs="{'invisible':['|',('current_user_uid','!=',1),('state','!=','aprobado1')]}"-->

                                </tree>
                                <form>
                                    <group>
                                        <field name="tipo"/>
                                        <field name="subtipo"/>
                                        <field name="serie"/>
                                        <field name="numero"/>
                                        <field name="ruc"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                </form>

            </field>
        </record>

        <!--      SEARCH VIEW-->
        <record id="search_view_gastos_tqc_filter" model="ir.ui.view">
            <field name="name">filter.gastos.tqc</field>
            <field name="model">tqc.liquidaciones</field>
            <field name="arch" type="xml">
                <search string="Search Gastos Tqc">
                    <field name="state" invisible="1"/>
                    <filter name="jefatura" string="Sin visto jefe" domain="[('state', '=', 'jefatura')]"/>
                    <separator/>
                    <filter name="contable" string="Contable" domain="[('state', '=', 'contable')]"/>
                    <separator/>
                    <filter name="pendiente" string="Pendiente" domain="[('state', '=', 'pendiente')]"/>
                </search>
            </field>
        </record>


        <!--  Actiones-->
        <record id="action_view_tree_liquidaciones" model="ir.actions.act_window">
            <field name="name">Flujo de aprobaciones</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="gastos_tqc.search_view_gastos_tqc_filter"/>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_tqc_liquidaciones')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_tqc_liquidaciones')})]"/>
            <field name="context">{'search_default_jefatura':1,'mode_view':'flujo'}</field>
            <field name="domain">[('habilitado_state', 'in', ['proceso','corregir'])]</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p>
            </field>
        </record>

        <record id="action_view_contable_liquidaciones" model="ir.actions.act_window">
            <field name="name">Flujo de aprobaciones</field>
            <field name="res_model">tqc.liquidaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="gastos_tqc.search_view_gastos_tqc_filter"/>
            <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('gastos_tqc.view_tree_tqc_liquidaciones')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('gastos_tqc.view_form_tqc_liquidaciones')})]"/>
            <field name="context">{'search_default_contable':1,'mode_view':'flujo'}</field>
            <field name="domain">[('habilitado_state', 'in', ['proceso','corregir'])]</field>

            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No hay registros
                </p>
            </field>
        </record>

