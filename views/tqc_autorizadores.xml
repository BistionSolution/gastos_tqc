<odoo>
    <data>
        <record id="view_tree_autorizadores_gasto" model="ir.ui.view">
            <field name="name">view.tree.auth.gasto</field>
            <field name="model">tqc.autorizadores</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0">
                    <field name="superior"/>
                    <field name="subordinados" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_form_autorizadores_gasto" model="ir.ui.view">
            <field name="name">view.form.aut.gasto</field>
            <field name="model">tqc.autorizadores</field>
            <field name="arch" type="xml">
                <form string="Superior" create="0" edit="0" delete="0">
                    <group string="Jefatura">
                        <field name="superior"/>
                        <field name="subordinados"/>
                    </group>
                </form>
            </field>
        </record>

        <!--View search-->
        <record id="view_search_autorizadores_gasto" model="ir.ui.view">
            <field name="name">view.search.auth.gasto</field>
            <field name="model">tqc.autorizadores</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="superior"/>
                    <field name="subordinados"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_auth_gastos">
            <field name="name">AutorizadoresS</field>
            <field name="res_model">tqc.autorizadores</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="gastos_tqc.view_search_autorizadores_gasto"/>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        </record>

    <!--CONTAVILIDAD AUTORIZADORES-->
        <record id="view_tree_auth_conta" model="ir.ui.view">
            <field name="name">view.tree.auth.conta</field>
            <field name="model">tqc.auth.contabilidad</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="empleado"/>
                </tree>
            </field>
        </record>

        <record id="view_form_auth_conta" model="ir.ui.view">
            <field name="name">view.form.auth.conta</field>
            <field name="model">tqc.auth.contabilidad</field>
            <field name="arch" type="xml">
                <form string="Superior">
                    <group string="Contabilidad">
                       <field name="empleado" options="{'no_quick_create':True,'no_create_edit':True}" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_auth_conta_gastos">
            <field name="name">Autorizadores Contabilidad</field>
            <field name="res_model">tqc.auth.contabilidad</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        </record>


        <menuitem id="menu_autorizadores_gasto" parent="gastos_tqc.menu_flujo_configuraciones" name="Autorizadores" sequence="4"/>
        <menuitem id="menu_autorizadores_jefatura" parent="gastos_tqc.menu_autorizadores_gasto" name="Jefatura"
                  action="gastos_tqc.action_auth_gastos" sequence="1"/>
        <menuitem id="menu_autorizadores_contabilidad" parent="gastos_tqc.menu_autorizadores_gasto" name="Contabilidad"
                  action="gastos_tqc.action_auth_conta_gastos" sequence="3"/>
    </data>
</odoo>