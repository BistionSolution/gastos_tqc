<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="gastos_tqc.headerChild" owl="1">
        <div class="o_expense_container d-flex o_form_statusbar gastos_tqc " context='{"search_default_draft": true}'>
            <div class="o_gastos_button" name="state" data-original-title="" title="">
                <button type="button" t-on-click="setSearchContext" id="pendiente" title="Estado actual"
                        class="btn o_arrow_button o_context_three btn-primary"
                        filter_name="pendiente">
                    Pendientes a procesar (<span t-out="countData['pendiente']"/>)
                </button>
                <button type="button" t-on-click="setSearchContext" id="contable" title="Estado actual"
                        class="btn o_arrow_button o_context_two btn-primary"
                        filter_name="contable">
                    Sin visto contable (<span t-out="countData['contable']"/>)
                </button>
                <button type="button" t-on-click="setSearchContext" id="jefatura" title="Estado actual"
                        class="btn o_arrow_button o_context_one btn-primary"
                        filter_name="jefatura">
                    Sin visto jefe (<span t-out="countData['jefatura']"/>)
                </button>
            </div>
        </div>
    </t>

    <t t-name="gastos_tqc.headerFlujo" t-inherit="gastos_tqc.ListRenderer" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[hasclass('o_list_renderer')]" position="before">
            <HeaderFlujo/>
        </xpath>
    </t>

    <t t-name="owl_learn.ClickMe.RecordRow" t-inherit="web.ListRenderer.RecordRow" t-inherit-mode="extension" owl="1">
        <!--        Xpath del elemento cuarto td    -->
        <xpath expr="//td[@class='o_data_cell']" position="after">
            <button class="search_ruc fa fa-search" t-on-click="_onClick"/>
        </xpath>

        <!--        <xpath expr="//td[@class='o_data_cell']" position="after">-->
        <!--            <td>-->
        <!--                <button t-on-click="_onClick">click me</button>-->
        <!--            </td>-->
        <!--        </xpath>-->
    </t>

    <t t-name="gastos_tqc.componentGlobal" owl="1">
        <!--        <button class="btn btn-primary" t-on-click="increment">Increment</button>-->
        <input type="text" class="o_input text-danger" t-on-click="_onClickInput"/>
        <button t-on-click="_onClickRuc" class="btn btn-primary search_ruc fa fa-search"/>
        <!--        desaparecer y apararecer boton con estado-->
    </t>

</templates>
