<?xml version="1.0" encoding="UTF-8"?>

<templates id="template">
    <t t-name="gastos_tqc.dashboard_liquid_tqc">
        <div class="o_expense_container d-flex o_form_statusbar gastos_tqc o_context_one" context='{"search_default_draft": true}'>
            <t t-foreach="expenses" t-as="expense">
                <div t-attf-class="o_expense_card o_arrow_button flex-grow-1 d-flex flex-column border-right-0 btn btn-primary">
                    <div class="content_center gastos_tqc">
                        <div>
<!--                            <span t-esc="render_monetary_field(expenses[expense]['amount'], expenses[expense]['currency'])" class="h2 o_expense_purple"/>-->
                            <span t-esc="expenses[expense]['description']"/>
                        </div>
                        <b class="m-2">(<span t-esc="expenses[expense]['amount']"/>)</b>
                    </div>
                </div>
                <div t-if="expense !== 'approved'" t-attf-class="">
                    <div class="content_center">
                        <span class="fa fa-angle-right fa-3x"/>
                    </div>
                </div>
            </t>
        </div>

    </t>
</templates>
