<odoo>
    <data>
        <!--REGLA PARA EMPLEADOS CUENTA VACAIONES-->
        <record id="ir_rule_employee_gastos" model="ir.rule">
            <field name="name">Mostrar cuenta vacaciones propia</field>
            <field name="model_id" ref="gastos_tqc.model_tqc_liquidaciones"/>
            <field name="domain_force">[('empleado_name.user_id','=',user.id)]</field>
            <!--            <field name="domain_force">[('empleado_name','=','09362888')]</field>-->
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_employee_gastos'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="ir_rule_aprobador_gastos" model="ir.rule">
            <field name="name">Mostrar solicitud vacaciones usuarios de los que aprueba jefatura</field>
            <field name="model_id" ref="gastos_tqc.model_tqc_liquidaciones"/>
            <field name="domain_force">
                ['|',('empleado_name.superior.user_id','in',[user.id]),('empleado_name.user_id','=',user.id)]
            </field>
            <!--            <field name="domain_force">[('empleado_name','=','09362888')]</field>-->
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_aprobador_gastos'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="ir_rule_contador_gastos" model="ir.rule">
            <field name="name">Mostrar solicitud vacaciones usuarios de los que aprueba contabilidad</field>
            <field name="model_id" ref="gastos_tqc.model_tqc_liquidaciones"/>
            <field name="domain_force"></field>
            <!--            <field name="domain_force">[('empleado_name','=','09362888')]</field>-->
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_contador_gastos'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <!-- Contacto regla-->
        <record id="ir_rule_subordinados_aprobador" model="ir.rule">
            <field name="name">Mostrar subordinados</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <!--<field name="domain_force">[('vc_ctavacation.id_departa.member_ids.user_id','in',[user.id])]</field>-->
            <field name="domain_force">
                [('superior.user_id','in',[user.id])]
            </field>
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_aprobador_gastos'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="ir_rule_contabilidad_aprobador" model="ir.rule">
            <field name="name">Mostrar total contabilidad</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <!--<field name="domain_force">[('vc_ctavacation.id_departa.member_ids.user_id','in',[user.id])]</field>-->
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_contador_gastos'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>
    </data>
</odoo>