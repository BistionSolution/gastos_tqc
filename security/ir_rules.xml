            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="ir_rule_empleado_admin" model="ir.rule">
            <field name="name">Mostrar todos empleados al admin</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">
                [(1,'=',1)]
            </field>
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_administrator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="ir_rule_empleado_own" model="ir.rule">
            <field name="name">Mostrar propia data</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">
                ['|',('subordinados.user_id','in',[user.id]),('user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4,ref('gastos_tqc.res_groups_employee_gastos'))]"/>
